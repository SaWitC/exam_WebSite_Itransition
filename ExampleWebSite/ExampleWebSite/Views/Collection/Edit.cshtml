@model ExampleWebSite.ViewModels.EditCollectionViewModel

<h1>Edit page</h1>

<script>
     $(document).ready(function () {
            $.ajax({
                type: "Get",
                url: "@Url.Action("GetThemes", "Theme")",
                dataType: "text",
                success: function (data) {
                    var arr = JSON.parse(data)
                    arr.forEach(el => $("#themes").append(`<option value="${el.title}">${el.title}</option>`));
                },
                error: function () {
                }
            })
     })
</script>

<form method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortDesc"></label>
        <input asp-for="ShortDesc" />
        <span asp-validation-for="ShortDesc"></span>
    </div>

    <div class="form-group">
        <input asp-for="Collectionid" />
    </div>

    <div class="form-group">
        <input type="text" asp-for="ThemaTitle" list="themes" />
    </div>

    <datalist id="themes" name="">
    </datalist>

    <input type="submit" value="Edit" />
</form>