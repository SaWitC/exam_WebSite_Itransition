@model ExampleWebSite.ViewModels.EditCollectionViewModel

<h1>Edit page</h1>

<script>
     $(document).ready(function () {
            $.ajax({
                type: "Get",
                url: "@Url.Action("GetThemes", "Theme")",
                dataType: "text",
                success: function (data) {
                    var arr = JSON.parse(data)
                    arr.forEach(el => $("#themes").append(`<option value="${el.title}">${el.title}</option>`));
                },
                error: function () {
                }
            })
     })
</script>

<form enctype="multipart/form-data" method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortDesc"></label>
        @*<input asp-for="collection.ShortDesc" />*@
        <textarea wrap="hard" asp-for="ShortDesc" id="kv-01" rows="15" class="markdown" required data-bs-version="3" data-theme="fa4" title="Krajee Markdown Editor">
    </textarea>
        <hr>
        <div class="row">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-2">
                <button type="submit" class="btn btn-block btn-primary"><i class="fa fa-check"></i> Submit</button>
            </div>
            <div class="col-sm-2">
                <button type="reset" class="btn btn-block btn-default"><i class="fa fa-ban"></i> Reset</button>
            </div>
            <div class="col-sm-4">
            </div>
        </div>
        <span asp-validation-for="ShortDesc"></span>
    </div>

    <div class="form-group">
        <input asp-for="Collectionid" />
    </div>

    <div class="form-group">
        <label>image</label>
        <input asp-for="ImageFile" accept="image/jpg,image/jpeg" />
    </div>

    <div class="form-group">
        <input type="text" asp-for="ThemaTitle" list="themes" />
    </div>

    <datalist id="themes" name="">
    </datalist>

    <input type="submit" value="@ViewResourcesModel["Edit"]" />
</form>