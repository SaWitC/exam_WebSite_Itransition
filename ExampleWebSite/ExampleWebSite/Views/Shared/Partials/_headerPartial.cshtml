
<header>
    <nav class="navbar-dark navbar navbar-expand-md navbar-toggleable-sm navbar-light HeadStyle box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">ExampleWebSite</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon text-white"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Collection" asp-action="Index">@ViewResourcesModel["NewCollections"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Collection" asp-action="MyCollection">@ViewResourcesModel["MyCollections"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="collection" asp-action="Create">@ViewResourcesModel["Create"]</a>
                    </li>
                </ul>
            </div>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("admin"))
            {
                <a asp-action="AdminPage" asp-controller="Account">@ViewResourcesModel["AdminPage"]</a>
            }
            <a asp-action="Index" asp-controller="Account"><img style="width:50px;height:50px;" type="image" src="~/icons/4-40070_user-staff-man-profile-user-account-icon-jpg.png"/></a>
        }
        else
        {
            <a class="btn text-white" asp-action="Login" asp-controller="Account">@ViewResourcesModel["Login"]</a>
            <a class="btn text-white" asp-action="Register" asp-controller="Account">@ViewResourcesModel["Register"]</a>
        }
